---
const pagePath = Astro.url.pathname;
const activeColor = 'active-link';
---

<nav class="navbar">
    <div class="container">

        <div class="menu">
            <ul class="menu-list">
                <li><a href="/" class={pagePath === '/' ? activeColor : ''}>Work</a></li>
                <li><a href="/about" class={pagePath === '/about' ? activeColor : ''}>About</a></li>
                <li><a href="/contact" class={pagePath === '/contact' ? activeColor : ''}>Contact</a></li>
                <li><a href="/socials" class={pagePath === '/socials' ? activeColor : ''}>Socials</a></li>
            </ul>
        </div>

    </div>
</nav>

<style>

    .navbar {
        background-color: #121212;
        padding: 20px 32px;
    }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        margin: 0 auto;
        padding: 0 16px;
    }

    .menu {
        order: 3;
        width: 100%;
        text-align: center;
    }

    .menu-list {
        display: flex;
        justify-content: center;
        gap: 10px;
        list-style-type: none;
        font-family: 'Helvetica Neue', sans-serif;
        font-size: 19px;
        font-weight: 200;
        text-transform: uppercase;
    }

    .menu-list li {
        padding: 8px 16px;
    }

    .menu-list a {
        color: #ffffff;
        text-decoration: none;
    }

    .menu-list a.active-link {
        color: #FDD600;
    }
</style>

---
interface Props {
    pagePath: string;
}

const pagePath = Astro.url.pathname;
const activeColor = 'text-yellow-500';
---

<nav class="bg-black w-full px-8 py-5 md:px-auto">
    <div class="md:h-16 h-28 mx-auto md:px-4 container flex items-center justify-center flex-wrap md:flex-nowrap">

        <div class="text-white order-3 w-full md:w-auto md:order-2">
            <ul class="flex font-semibold justify-center space-x-4">
                <li class="md:px-4 md:py-2"><a href="/" class={pagePath === '/' ? activeColor : ''}>Work</a></li>
                <li class="md:px-4 md:py-2"><a href="/about" class={pagePath === '/about' ? activeColor : ''}>About</a></li>
                <li class="md:px-4 md:py-2"><a href="/contact" class={pagePath === '/contact' ? activeColor : ''}>Contact</a></li>
                <li class="md:px-4 md:py-2 "><a href="/socials" class={pagePath === '/socials' ? activeColor : ''}>Socials</a></li>
            </ul>
        </div>

    </div>
</nav>
